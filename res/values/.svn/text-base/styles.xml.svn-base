<resources>

    <style name="AppTheme" parent="android:Theme.Light" />

    <style name="page_style">
        <item name="android:background">@color/background</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>
    </style>
    
    <style name="pull_list_style">
        <item name="android:cacheColorHint">#00000000</item>
        <item name="android:divider">#19000000</item>
        <item name="android:dividerHeight">1dp</item>
        <item name="android:fadingEdge">none</item>
        <item name="android:fastScrollEnabled">false</item>
        <item name="android:footerDividersEnabled">false</item>
        <item name="android:headerDividersEnabled">false</item>
        <item name="android:scrollbars">none</item>
    </style>
    <style name="listview_style" parent="android:Widget.ListView">
        <item name="android:fadingEdge">none</item>
        <item name="android:fastScrollEnabled">false</item>
        <item name="android:footerDividersEnabled">false</item>
        <item name="android:headerDividersEnabled">false</item>
        <item name="android:scrollbars">none</item>
    </style>
    <style name="base_header_view" parent="android:Widget.TextView">
        <item name="android:background">#2d2d2d</item>
        <item name="android:drawableLeft">@drawable/title_logo</item>
        <item name="android:drawablePadding">110dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">22sp</item>
    </style>
    <style name="base_button_blue" parent="android:Widget.Button">
        <item name="android:background">@drawable/telphone_button_selector</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">18sp</item>
    </style>
</resources>