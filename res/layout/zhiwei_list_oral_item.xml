<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:background="@drawable/oral_item_selector"
    android:orientation="vertical" >

    <View
        android:id="@+id/textView1"
        android:layout_width="fill_parent"
        android:layout_height="5dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@color/background"
         />

    <TextView
        android:id="@+id/oralitemnumber"
        android:layout_width="30dp"
        android:layout_height="120dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/textView1"
        android:background="#00A0DC"
        android:gravity="center"
        android:text="1"
        android:textSize="15sp"
        android:textColor="#ffffff" />

    <TextView
        android:id="@+id/oralImteAddr"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="25dp"
        android:layout_alignLeft="@+id/oralItemTitle"
        android:layout_alignParentBottom="true"
        android:ellipsize="end"
        android:singleLine="true"
        android:paddingBottom="10dp"
        android:textSize="12sp"
        android:text="北京市朝阳区啊啊啊啊啊啊啊啊啊"
        android:textColor="#666666" />

    <TextView
        android:ellipsize="end"
        android:layout_marginLeft="10dp"
        android:layout_width="100dp"
        android:layout_height="25dp"
        android:singleLine="true"
        android:layout_below="@+id/oralitemtime"
        android:layout_toRightOf="@+id/oralitemnumber"
        android:gravity="center"
        android:id="@+id/oralItemTitle"
        android:background="@drawable/gongsi_name_bg"
        android:textSize="15sp"
        android:text="活虎科技"
        android:layout_marginTop="2dp"
        android:textColor="#333333" />

    <TextView
        android:id="@+id/xinchou"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textColor="#555555"
        android:layout_marginRight="20dp"
        android:layout_alignBaseline="@+id/oralItemTitle"
        android:singleLine="true"
        android:ellipsize="end"
        android:layout_alignBottom="@+id/oralItemTitle"
        android:layout_marginLeft="13dp"
        android:layout_toRightOf="@+id/oralItemTitle"
        android:textSize="18sp"
        android:text="薪酬：2000" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="fill_parent"
        android:background="#ffffff"
        android:layout_height="14dp"
        android:layout_alignBottom="@+id/oralitemtime"
        android:layout_toRightOf="@+id/oralitemnumber"
        />

    <TextView
        android:id="@+id/oralitemtime"
        android:layout_marginRight="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/textView1"
        android:text="2014/10/10 10:10:22"
        android:textSize="10sp" />

    <TextView
        android:id="@+id/oralgangwei"
        
        android:layout_marginTop="30dp"
        android:textColor="#333333"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/oralItemTitle"
        android:layout_below="@+id/oralItemTitle"
        android:singleLine="true"
        android:ellipsize="end"
        android:layout_marginRight="30dp"
        android:text="招聘职位:Java 工程师" />
    <TextView
        android:id="@+id/worktype"
        android:layout_marginTop="10dp"
        android:textColor="#333333"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/oralItemTitle"
        android:layout_below="@+id/oralItemTitle"
        android:singleLine="true"
        android:ellipsize="end"
        android:layout_marginRight="30dp"
        android:text="全职" />

</RelativeLayout>