<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@drawable/oral_item_selector"
    android:paddingBottom="8dp"
    android:id="@+id/myinfoitem"
    android:layout_height="wrap_content" >

    <TextView
        android:id="@+id/myinfotitle"
        android:layout_width="65dp"
        android:layout_height="50dp"
        android:layout_marginLeft="14dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:gravity="center_vertical"
        android:text="我的资料"
        android:textColor="#777777"
        android:textSize="15sp" />

    <EditText
        android:id="@+id/myinfoedittext"
        android:layout_width="fill_parent"
        android:layout_height="30dp"
        android:layout_marginRight="10dp"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/myinfotitle"
        android:background="#ffffff"
        android:ems="10"
        android:textSize="13sp"
        android:textColor="#c7c7cd"
        android:hint="请输入我的资料"
        android:gravity="center_vertical"
        android:inputType="textPersonName"
        android:maxLength="20"
        android:singleLine="true" />


    I

</RelativeLayout>