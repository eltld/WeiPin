<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:background="@drawable/oral_item_selector"
    android:orientation="vertical" >

    <View
        android:id="@+id/textView1"
        android:layout_width="fill_parent"
        android:layout_height="3dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@color/background"
         />

    <TextView
        android:id="@+id/oralitemnumber"
        android:layout_width="30dp"
        android:layout_height="100dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/textView1"
        android:background="#00A0DC"
        android:gravity="center"
        android:text="1"
        android:textColor="#ffffff"
        android:textSize="15sp" />


    <TextView
        android:id="@+id/xinchou"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textColor="#555555"
        android:layout_marginRight="30dp"
        android:layout_alignBaseline="@+id/oralItemTitle"
        android:singleLine="true"
        android:ellipsize="end"
        android:layout_alignBottom="@+id/oralItemTitle"
        android:layout_marginLeft="13dp"
        android:layout_toRightOf="@+id/oralItemTitle"
        android:textSize="18sp"
        android:text="薪酬：2000" />
    <TextView
        android:id="@+id/oralItemTitle"
        android:layout_width="100dp"
        android:layout_height="25dp"
        android:layout_below="@+id/oralitemtime"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="2dp"
        android:layout_toRightOf="@+id/oralitemnumber"
        android:background="@drawable/gongsi_name_bg"
        android:ellipsize="end"
        android:gravity="center"
        android:singleLine="true"
        android:text="活虎科技"
        android:textColor="#333333"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="fill_parent"
        android:background="#ffffff"
        android:layout_height="14dp"
        android:layout_marginTop="4dp"
        android:layout_alignBottom="@+id/oralitemtime"
        android:layout_toRightOf="@+id/oralitemnumber"
        />

    <!--在面试TAB中是面试时间  -->
    <TextView
        android:id="@+id/oralgangwei"
        android:layout_marginTop="32dp"
        android:textColor="#333333"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/oralItemTitle"
        android:layout_below="@+id/oralItemTitle"
        android:singleLine="true"
        android:ellipsize="end"
        android:layout_marginRight="30dp"
        android:text="工作类型:管理" />
        <!-- 在面试Tab中是 面试地点-->
    <TextView
        android:id="@+id/worktype"
        android:layout_marginTop="10dp"
        android:textColor="#333333"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/oralItemTitle"
        android:layout_below="@+id/oralItemTitle"
        android:singleLine="true"
        android:ellipsize="end"
        android:layout_marginRight="30dp"
        android:text="工作性质:全职" />


    <TextView
        android:id="@+id/passbutton"
        android:layout_width="30dp"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/textView1"
        android:background="#00A0DC"
        android:gravity="center"
        android:text="待入职"
        android:textColor="#ffffff"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/oralitemtime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/oralitemnumber"
        android:layout_toLeftOf="@+id/passbutton"
        android:text="2014/10/10 10:10:22"
        android:textSize="10sp" />

</RelativeLayout>